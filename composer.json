{
    "name": "tenqz/lingua",
    "description": "A comprehensive PHP library for advanced text processing using Chain of Responsibility pattern",
    "type": "library",
    "keywords": [
        "text-processing",
        "nlp",
        "chain-of-responsibility",
        "text-analysis",
        "text-manipulation",
        "russian-language",
        "text-cleanup",
        "text-normalization"
    ],
    "homepage": "https://github.com/tenqz/lingua",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Patsay",
            "email": "smmartbiz@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Tenqz\\Lingua\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tenqz\\Lingua\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "scripts": {
        "test": "phpunit"
    }
}
